<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swiper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Design.AppBarLayout">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/profile_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#0069FF"
                android:elevation="8dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/userprof"
                    android:padding="16dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account"
                        app:civ_border_color="@color/colorWhite"
                        app:civ_border_width="2dp"/>
                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jabez Magomere"
                        android:layout_gravity="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/karla"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="jaybezdon@gmail.com"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/karla"
                        />
                </LinearLayout>



            </android.support.design.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense"
                        android:outlineSpotShadowColor="@color/white"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/profile_fname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/profile_first_name"
                            android:inputType="textPersonName"
                            android:drawableStart="@drawable/ic_person_black_24dp"
                            android:textColor="@color/card_backgroundColor"
                           />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/profile_lname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/profile_last_name"
                            android:inputType="textPersonName"
                            android:drawableStart="@drawable/ic_person_black_24dp"
                            android:textColor="@color/card_backgroundColor"
                  />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/profile_uname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/profile_user_name"
                            android:inputType="textPersonName"
                            android:drawableStart="@drawable/iconusername"
                            android:textColor="@color/card_backgroundColor"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout

                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/profile_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/profileEmail"
                            android:inputType="textEmailAddress"
                            android:drawableStart="@drawable/ic_mail_profile"
                            android:textColor="@color/card_backgroundColor"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/profile_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/profile_home"
                            android:inputType="text"
                            android:drawableStart="@drawable/ic_home_black_24dp"
                            android:textColor="@color/card_backgroundColor"
                           />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/profile_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prof_phone_number"
                            android:inputType="phone"
                            android:drawableStart="@drawable/ic_phone_black_24dp"
                            android:textColor="@color/card_backgroundColor"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_age"
                            android:fontFamily="@font/karla"
                            android:textSize="18sp"
                            android:textColor="@color/card_backgroundColor"/>
                        <NumberPicker
                            android:id="@+id/numberPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </android.support.design.widget.TextInputLayout>

                   <RadioGroup
                       android:layout_marginTop="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:backgroundTint="@color/colorPrimaryDark">
                       <RadioButton
                           android:id="@+id/radio_male"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/userprofile_male"
                           android:textSize="16sp"
                           android:textColor="@color/card_backgroundColor"
                           android:fontFamily="@font/karla"/>

                       <RadioButton
                           android:id="@+id/radio_female"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/userprofile_female"
                           android:textSize="16sp"
                           android:textColor="@color/card_backgroundColor"
                           android:fontFamily="@font/karla"/>
                   </RadioGroup>



                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_weight"
                            android:fontFamily="@font/karla"
                            android:textSize="18sp"
                            android:textColor="@color/card_backgroundColor"
                            />

                        <SeekBar
                            android:layout_marginTop="5dp"
                            android:id="@+id/seek_current_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="200"
                            android:thumb="@drawable/ic_weight"
                            />

                        <TextView
                            android:id="@+id/tv_current_weight"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0"
                            android:fontFamily="@font/karla"
                            android:textColor="@color/colorAccent"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/userprofile_targetweight"
                            android:fontFamily="@font/karla"
                            android:textSize="18sp"
                            android:textColor="@color/card_backgroundColor"
                            />

                        <SeekBar
                            android:layout_marginTop="5dp"
                            android:id="@+id/seek_targetweight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="200"
                            android:thumb="@drawable/ic_weight"
                            />

                        <TextView
                            android:id="@+id/tvTargetWeight"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0"
                            android:fontFamily="@font/karla"
                            android:textColor="@color/colorAccent"
                            />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>



                <android.support.design.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/userprofile_btnsave"
                    android:backgroundTint="#1abc9c"
                    android:textColor="@color/card_backgroundColor"
                    style="@style/Widget.MaterialComponents.Button"
                    android:textStyle="bold"
                    android:fontFamily="@font/karla"/>


            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>